<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainscreen_bg"
    tools:context=".Account">

    <LinearLayout
        android:id="@+id/accountPanel_bottomPanel_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottompanel_border"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/bottomPanel"
        app:layout_constraintEnd_toEndOf="@+id/bottomPanel"
        app:layout_constraintStart_toStartOf="@+id/bottomPanel"
        app:layout_constraintTop_toTopOf="@+id/bottomPanel">

        <ImageButton
            android:id="@+id/accountPanel_messangerButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            app:srcCompat="@drawable/bottompanel_messengerbutton" />

        <ImageButton
            android:id="@+id/accountPanel_questionnairesButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            app:srcCompat="@drawable/bottompanel_questionnairesbutton" />

        <ImageButton
            android:id="@+id/accountPanel_eventsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            app:srcCompat="@drawable/bottompanel_eventsbutton" />

        <ImageButton
            android:id="@+id/accountPanel_newsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            app:srcCompat="@drawable/bottompanel_newsbutton" />

        <ImageButton
            android:id="@+id/accountPanel_accountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            app:srcCompat="@drawable/bottompanel_accountbutton" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/accountPanel_fillQuestionnaireButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/accountpanel_fillquestionnairebutton"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"/>

    <FrameLayout
        android:id="@+id/accountPanel_dataLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/accountPanel_avatarImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            app:shapeAppearanceOverlay="@style/rounded_image"
            android:src="@drawable/defaultavatar" />

        <TextView
            android:id="@+id/accountPanel_usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="187dp"
            android:fontFamily="sans-serif-black"
            android:text="\@username"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:typeface="sans" />

        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="222dp"
            android:background="@drawable/accountpanel_basedatabg" >

            <TextView
                android:id="@+id/accountPanel_FIOText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Иванов Иван Иванович"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/accountPanel_birthdayDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:text="Заполните анкету"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/accountPanel_educationPlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:typeface="sans"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="123dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="307dp"
            android:background="@drawable/accountpanel_databg" >

            <TextView
                android:id="@+id/accountPanel_descriptionText"
                android:layout_width="305dp"
                android:layout_height="110dp"
                android:layout_gravity="right|center_vertical"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:typeface="sans"/>
        </FrameLayout>

        <TextView
            android:id="@+id/accountPanel_tagsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="438dp"
            android:fontFamily="sans-serif-medium"
            android:text="Теги:"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:typeface="sans" />

        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="123dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="469dp"
            android:background="@drawable/accountpanel_databg" >

            <TextView
                android:id="@+id/accountPanel_tagsText"
                android:layout_width="305dp"
                android:layout_height="110dp"
                android:layout_gravity="right|center_vertical"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:typeface="sans"/>
        </FrameLayout>

        <TextView
            android:id="@+id/accountPanel_tgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="600dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:typeface="sans" />
    </FrameLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/accountPanel_loadingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:src="@drawable/loading_anim"/>

</FrameLayout>