<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationScreen_1"
    android:background="@color/mainscreen_bg">

    <TextView
        android:id="@+id/registrationPanel_4_registerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="@color/textColor"
        android:textSize="40sp" />

    <FrameLayout
        android:id="@+id/registrationPanel_4_bgPanel_FrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="126dp"
        android:background="@drawable/loginsignup_bg_3rfl_1bl">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registrationPanel_4_usernameEditText"
                android:layout_width="314dp"
                android:layout_height="48dp"
                android:text="delete me"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/textColor"
                android:background="@drawable/loginsignup_textinputbg"
                android:padding="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/registrationPanel_4_usernameEditText_correctImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wronglineimage"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="300dp"/>

        <TextView
            android:id="@+id/registrationPanel_4_usernameText"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Псевдоним*"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="149dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registrationPanel_4_passwordEditText"
                android:layout_width="314dp"
                android:layout_height="48dp"
                android:text="delete me"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/textColor"
                android:background="@drawable/loginsignup_textinputbg"
                android:padding="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/registrationPanel_4_passwordEditText_correctImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wronglineimage"
            android:layout_marginTop="161dp"
            android:layout_marginLeft="300dp"/>

        <TextView
            android:id="@+id/registrationPanel_4_passwordText"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="116dp"
            android:fontFamily="sans-serif-medium"
            android:text="Пароль*"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="242dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registrationPanel_4_passwordConfirmEditText"
                android:layout_width="314dp"
                android:layout_height="48dp"
                android:text="delete me"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/textColor"
                android:background="@drawable/loginsignup_textinputbg"
                android:padding="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/registrationPanel_4_passwordConfirmEditText_correctImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wronglineimage"
            android:layout_marginTop="254dp"
            android:layout_marginLeft="300dp"/>

        <TextView
            android:id="@+id/registrationPanel_4_passwordConfirmText"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:fontFamily="sans-serif-medium"
            android:text="Пароль ещё раз*"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/registrationPanel_4_compliteRegistrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="309dp"
            android:src="@drawable/loginsignup_compliteregistrationbutton"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NULL"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/registrationPanel_4_pageNumberImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pagenumberimage_4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="108dp"
        />

</FrameLayout>