<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="82dp">

    <ImageButton
        android:id="@+id/questionnairePrev_bgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/questionnairespanel_questionnairebg"
        android:contentDescription="bg button"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/questionnairePrev_nameText"
        android:layout_width="367dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-medium"
        app:autoSizeTextType="uniform"
        android:text="Кузнецов Степан Александрович"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/questionnairePrev_educationPlaceText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="школа номер 1561"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

</FrameLayout>